.message_title{
	height: 90px;
	background: white;
	padding: 10px 20px;
}

.message_title p {
	margin: 0;
	font-size: 12px;
	color: #666666;
	margin-top: 5px;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}
.message_title p span {
	display: inline-block;
	width: 80%;
}

.message_title p:first-child {
	font-size: 16px;
	font-weight: bold;
	color: #333333;
	margin-top: 0;
}

.message_content {
	margin-top: 10px;
	padding: 10px 20px;
	background: white;
}

.message_content > p {
	font-size: 12px;
	margin: 0;
	color: #999999;
}

.message_content > pre {
	color: #666666;
	font-size: 13px;
	word-wrap:break-word;
	white-space: pre-wrap!important;
	word-wrap: break-word!important;
}

.mesage_detail {
	margin-top: 5px;
	padding: 5px 20px;
	background: white;
}

.mesage_detail p {
	margin: 0;
}

.file_list {
	width: 100%;
	padding: 5px 20px;
	background: white;
	margin-top: 10px;
}

.file_list ul{
	margin: 0;
}
.file_list li {
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}
.file_list li a {
	font-size: 12px;
}