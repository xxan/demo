.message_title{
	width: 100%;
	height: 70px;
	background:rgba(255,255,255,1);
	box-shadow:0px 3px 6px 0px rgba(5,4,6,0.2);
}
.mui-input-row{
	width: 94%;
	margin: 0 auto;
	top: 15px;
}
.task_all{
	width: 100%;
	margin: 0;
}
.task_all li{
	width: 100%;
}
.task_all li span{
	display: block;
	color: #999999;
	font-size: 14px;
	height: 36px;
	line-height: 36px;
	padding-left: 10px;
	padding-right: 10px;
}
.task_all li p{
	display: block;
	margin: 0;
	background: #FFFFFF;
	line-height: 30px;
	padding: 10px;
}
.footer_submit .btn_save{
	width: 100%;
}