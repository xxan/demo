<script type="text/javascript">
	mui.init();
	var id = common.getQueryUrl('id') || '';
	var changeId = common.getQueryUrl('changeid') || '';
	var isSee = common.getQueryUrl('is_see');
	var newChangeList = [];
	console.log(newChangeList)
	
	var changeTime;
	var fileList = [];
	
	var changeNewId;//更新id
	
	if(isSee) {
		$('.up_btn').hide();
		$('.choose_img').hide();
		$('.this_company b').hide();
		// $('.add_list').hide();
		$('.footer_submit').hide();
	}else {
		$('.change_list_ul').hide();
	}
	
	var input = $('input');
	var textarea = $('textarea');
	
	var processList = [];
	var processId;
	
	
	var selectList = [];
	var selectTypeId;
	var selectName;
	var startTime,endTime;
	var beforeStartTime,beforeEndTime;
	var timeText;
	var operationNum = 1;
	var recordChangeId;
	
	//添加变更
	mui('.change_list').on('tap','.add_list',function() {
		$('.add_change').show();
	})
	
	//修改变更
	mui('.change_list').on('tap','.update_item',function() {
		$('.add_change').show();
		selectTypeId = $(this).attr('type_id');
		selectName = common.getKeyValue(selectList,selectTypeId);
		if(selectName == '其他') {
			$('.pay_type_other').show();
			$('.input_show').hide();
			$('.choose_box').hide();
			$('.area_show').show();
		}else if(selectName == '合同工期') {
			$('.choose_box').show();
			$('.area_show').hide();
			$('.input_show').hide();
			$('.pay_type_other').hide();
		}else if(selectName == '合同金额') {
			$('.input_show').show();
			$('.area_show').hide();
			$('.choose_box').hide();
			$('.pay_type_other').hide();
		}else {
			$('.input_show').hide();
			$('.area_show').show();
			$('.pay_type_other').hide();
			$('.choose_box').hide();
		}
		getDetail(selectTypeId,true)
	})
	
	//修改变更
	mui('.change_list').on('tap','.update_item',function() {
		$('.add_change').show();
		selectTypeId = $(this).attr('type_id');
		
	})
	
	//关闭
	mui('.add_change').on('tap','.mui-pull-left',function() {
		$('.add_change').hide();
	})
	
	$('input[type=radio][name=choose_time]').change(function () {
	   
	    var myvalue = $(this).val();
			console.log(myvalue)
			if(myvalue == 0) {
				$('.contract_work').show()
				timeText = '有固定的工期'
			}else {
				$('.contract_work').hide()
				timeText = '无固定工期'
			}
	});
	
	function getChangeSelect() {
		var url = '/api/ContractManage/AlterationTypeSelect';
		return request.post(url).then(function(res) {
			console.log(res);
			if(res.code == 200) {
				for(var i=0;i<res.data.length;i++) {
					selectList.push({
						text: res.data[i].SUB_NM,
						value: res.data[i].SUB_ID
					})
				}
				return;
			}
		})
	}
	
	function getDetail(type,flag) {
		var url = '/api/ContractManage/AddAlterationRecord';
		return request.post(url,{ContractId: id,AlterationRecordId: recordChangeId || '',AlterationType: type}).then(function(res) {
			console.log(res);
			if(res.code == 200) {
				$('.abolish_before').val(res.data.AlterationBefore || '无');
				if(type == 1) {
					$('.abolish_before').val(res.data.BeforeBeginTime + ' - ' + res.data.BeforeEndTime);
					beforeStartTime = res.data.BeforeBeginTime;
					beforeEndTime = res.data.BeforeEndTime;
				}
			}
			
		})
	}
	
	mui('.footer_submit_one').on('tap','span',function() {
		if(!selectTypeId) {
			mui.toast('请选择变更事项！');
			return;
		} 
		var postData = {};
		postData.AlterationType = selectTypeId;
		postData.typeText = selectName;
		
		if(selectName == '合同工期' ) {
			if(!timeText) {
				mui.toast('请选择合同工期！');
				return;
			} 
			if(timeText == '有固定的工期') {
				if(!startTime || !endTime) {
					mui.toast('请选择工期时间！');
					return;
				}
			}
			postData.BeginTime = startTime;
			postData.EndTime = endTime;
			postData.BeforeBeginTime = beforeStartTime;
			postData.BeforeEndTime = beforeEndTime;
		}else if(selectName == '合同金额' ) {
			if(!$('.price_input').val()) {
					mui.toast('请输入金额！');
					return;
			}
			postData.AlterationBefore = $('.abolish_before').val();
			postData.AlterationLater = $('.price_input').val();
		}else if(selectName == '其他' ) {
			postData.Rests = $('.type_other_name').val();
			if(!$('.type_other_name').val()) {
					mui.toast('请输入其他内容！');
					return;
			}
			postData.AlterationBefore = $('.abolish_before').val();
			if(!$('.abolish_after').val()) {
					mui.toast('请输入变更后内容！');
					return;
			}
			postData.AlterationLater = $('.abolish_after').val();
		}else {
			if(!$('.abolish_after').val()) {
				
					mui.toast('请输入变更后内容！');
					return;
			}
			postData.AlterationBefore = $('.abolish_before').val();
			postData.AlterationLater = $('.abolish_after').val();
		}
		postData.operate = operationNum;
		newChangeList.push(postData);
		
		var html =  '';
		if(newChangeList.length> 0) {
			for(var i=0;i<newChangeList.length;i++) {
				var list = newChangeList[i];
				console.log(list)
				var befores = list.AlterationBefore;
				var afters = list.AlterationLater;
				if(list.typeText == '合同工期') {
					befores = list.BeforeBeginTime + ' - ' + list.BeforeEndTime;
					afters = list.BeginTime + ' - ' + list.EndTime;
				}
				html+= '<li><div class="li_item">'+
							'<span>变更事项：</span><p>'+ (list.typeText == '其他' ? '其他-'+ Rests : list.typeText)  +'<a class="delete_item" type_id="'+selectTypeId+'">删除</a><a class="update_item"type_id="'+selectTypeId+'">修改</a></p>'+
							'</div><div class="li_item">'+
							'<span>变更前：</span><p>'+ befores +'</p>'+
							'</div><div class="li_item">'+
							'<span>变更后：</span><p>'+ afters +'</p>'+
							'</div></li>';
			}
		}
		
		if(html != '' ) {
				$('.change_list_ul').show();
		}
		
		$('.change_list_ul').html(html);
		$('.add_change').hide();
	});
	
	//文件上传
	$("#add_file").on('change', function(e) {
		console.log(1231123)
		var files = $(this)[0].files;
		console.log(files)
		var names = '';
		var arr = [];
		for (var i = 0; i < files.length; i++) {
			var formData = new FormData();
			formData.append("file", files[i]);
			arr.push(upload(formData, files[i].lastModified, true))
			names += '<li item=' + files[i].lastModified + '><span class="file_list_name spans_back" item=' +
				files[i].lastModified + '>' + files[i].name +
				'</span><span class="file_list_delete">删除</span></li>';
		}
		var _this = this;
		Promise.all(arr).then(function() {
			$(_this).val('');
		})
		if (files.length > 0) {
			$('.add_file_list').append(names);
		}
	});
	//文件删除
	mui('.add_file_list').on('tap', '.file_list_delete', function() {
		var id = $(this).parents('li').attr('id');
		var item = $(this).parents('li').attr('item');
		if (id) {
			for (var i = 0; i < fileList.length; i++) {
				if (fileList[i].Id == id) {
					fileList.splice(i, 1);
				}
			}
		}
		if (item) {
			for (var i = 0; i < fileList.length; i++) {
				if (fileList[i].tid == item) {
					fileList.splice(i, 1);
				}
			}
		}
		$(this).parents('li').remove();
	})
	//文件预览
	mui('.add_file_list').on('tap', '.file_list_name', function() {
		var path = $(this).attr('path');
		var item = $(this).attr('item');
		mui.showLoading('加载中...');
		if (path) {
			openFile(baseUrl + path)
		}
		if (item) {
			for (var i = 0; i < fileList.length; i++) {
				if (item == fileList[i].tid) {
					openFile(baseUrl + fileList[i].FilePath)
				}
			}
		}
	})
	
	function upload(formData, flag, type) {
		var url = '/api/BusinessManage/UploadFile?Type=ScanFile';
		return request.upload(url, formData).then(function(res) {
			console.log(res)
			if (res.code == 200) {
				var data = {
					"FileName": res.data.FileName,
					"Extension": res.data.Extension,
					"FilePath": res.data.FilePath,
					"Type": "合同管理_合同变更/AlterationFile",
					"tid": flag
				}
				fileList.push(data);
				console.log(fileList)
				return;
			}
		})
	}
	
	
	function getInfo() {
		var url = '/api/ContractManage/AddOrUpdateAlteration';
		var postData = {
			AlterationId: changeId,
			ContractId: id
		}
		return request.post(url,postData).then(function(res) {
			console.log(res)
			if(res.code == 200) {
				var info = res.data.modelPc;
				$('.project_name').html(info.ProjectName);
				$('.contract_num').html(info.Number);
				$('.contract_type').html(res.data.TypeName);
				$('.contract_company').html(info.ConstructionUnit);
				$('.contract_price').html(info.Price);
				
				if(isSee) {
					$('.change_time').val(res.data.modelCai.AlterationTime);
					$('.change_reszon').val(res.data.modelCai.AlterationReason);
					changeNewId = res.data.modelCai.ID;
					var names = '';
					for(var i=0;i<res.data.LstFile.length;i++) {
						var lists = res.data.LstFile[i];
						// if(isCheck || onlysee) {
							names += '<li id='+ lists.Id +'><span class="file_list_name spans_back" path='
							+ lists.FilePath +'>'+ lists.Name + lists.FileFormat +
							'</span><span class="file_list_delete">删除</span></li>';
						// }
						var obj = {
							"Id": lists.Id,
							"Name": lists.FileName,
							"FileFormat": lists.Extension,
							"FilePath": lists.FilePath,
							"Type": "合同管理-合同变更/AlterationFile",
						};
						fileList.push(obj);
					}
					$('.add_file_list').html(names);
				
				}
			
			}
		})
	}
	
	function getChangeList() {
		
		var url = '/api/ContractManage/AlterationRecordQuery';
		var postData = {
			AlterationId: changeId
		}
		
		return request.post(url,postData).then(function(res) {
			console.log(res)
			if(res.code == 200) {
				var html = '';
				for(var i=0;i<res.data.length;i++) {
					var item = res.data[i];
					for(var j=0;j<item.AlterationRecords.length;j++) {
						var list = item.AlterationRecords[j];
						var typeId = common.getValueToKey(selectList,list.AlterationType);
						html+= '<li><div class="li_item">'+
									'<span>变更事项：</span><p>'+ list.AlterationType +
									'<a class="delete_item" type_id="'+ typeId +
									'">删除</a><a class="update_item" type_id="'+ typeId +
									'">修改</a></p>'+
									'</div><div class="li_item">'+
									'<span>变更前：</span><p>'+ list.AlterationBefore +'</p>'+
									'</div><div class="li_item">'+
									'<span>变更后：</span><p>'+ list.AlterationLater +'</p>'+
									'</div></li>';
					}
					
				}
				
				$('.change_list_ul').html(html);
			}
		})
	}
	
	function submit(flag) {
		if(!changeTime) {
			mui.toast('请选择变更时间！！！');
			return;
		}
		if(!$('.change_reszon').val()) {
			mui.toast('请输入变更原因！！！');
			return;
		}
		if(newChangeList.length == 0) {
			mui.toast('请添加变更事项！！！');
			return;
		}
		if(!processId) {
			mui.toast('请选择审批流程！！！');
			return;
		}
		
		var postData = {};
		if(changeId) postData.ID = changeId;
		postData.ExtensionId = id;
		postData.AlterationTime = changeTime;
		postData.AlterationReason = $('.change_reszon').val();
		postData.isSubmit = flag;
		postData.Template = processId;
		
		postData.lstFile = fileList;
		
		postData.AlterationRecord = newChangeList;
		
		console.log(postData)
		var url = '/api/ContractManage/SaveAlterationInfo';
		return request.post(url,postData).then(function(res) {
			console.log(res)
			if(res.code == 200) {
				
			}else {
				mui.toast('保存失败。' + res.msg)
			}
		})
		
	}
	
	//点击保存
	mui('.footer_submit').on('tap', '.btn_save', function() {
		submit(false);
	});
	
	//点击提交
	mui('.footer_submit').on('tap', '.btn_submit', function() {
		submit(true);
	});
	
	mui.showLoading()
	common.promise()
	.then(() => {
		return getChangeSelect();
	})
	.then(function() {
		return getInfo();
