.mui-content {
	margin-bottom: 50px;
}

.point_title {
	width: 100%;
	height: 44px;
	line-height: 44px;
	font-size: 16px;
	font-family: 'MicrosoftYaHei-Bold';
	padding-left: 5%;
	background: white;
	margin: 0;
}

.point_detail {
	width: 100%;
	padding: 5% 5% 2%;
}

.point_detail p {
	margin: 0;
	color: #333333;
}

.point_detail p span {
	color: #666666;
}


.daily_info {
	background: white;
	margin: 0;
	border-top: solid 1px #E6E6E6;
}

.daily_info li {
	width: 100%;
	height: 48px;
	line-height: 48px;
	padding: 0 5%;
	color: #666666;
	font-size: 14px;
	position: relative;
	border-bottom: solid 1px #E6E6E6;
}

.daily_info li a {
	color: #666666;
}

.daily_info li span {
	display: inline-block;
	width: 18px;
	height: 9px;
	background: url(../img/edit_down.png) no-repeat center;
	background-size: cover;
	position: absolute;
	right: 5%;
	top: 20px;
}

.daily_info li input,
.daily_info li label{
	padding: 0px;
}

.daily_info li:nth-child(3) span {
	background: none;
	width: auto;
	height: 100%;
	top: 0;
}

.mui-content > h5 {
	height: 30px;
	line-height: 30px;
	padding-left: 5%;
}

.mui-content > h5 b{
	color: red;
}

.description {
	width: 100%;
}

.description textarea {
	width: 100%;
	padding: 5%;
	height: 110px;
	border: none;
	font-family: "microsoft yahei";
	text-align: left;
	font-size: 14px;
}

.new_daily p {
				height: 100%;
				display: inline-block;
				width: 47% !important;
				border-bottom: 0;
				text-align: center;
			}
.upload_file p{
				height: 50px;
				line-height: 50px;
				background: white;
				position: relative;
				padding-left: 20px;
			}
			
			.upload_file input {
				opacity: 0;
				width: 80px;
				height: 30px;
				float: right;
				position: absolute;
				top: 10px;
				right: 20px;
				z-index: 998;
			}
			.upload_file label {
				width: 80px;
				height: 30px;
				background: #3B9CFF;
				color: white;
				position: absolute;
				top: 10px;
				right: 20px;
				text-align: center;
				line-height: 30px;
				border-radius: 15px;
			}
			.file_tendering_list {
				padding-bottom: 50px;
			}